<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyTabLayoutstyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="background">@color/white</item>
        <item name="tabIndicatorColor">@color/md_red_500</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/md_red_500</item>
        <item name="tabMode">scrollable</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="TextInputWhiteStyle" parent="AppTheme">
        <!--输入框提示字体色-->
        <item name="android:textColorHint">#ffffff</item>
        <!--输入框下划线默认颜色-->
        <!--        <item name="colorControlNormal">@color/white</item>-->
        <!--输入框下划线选中状态色-->
        <item name="colorControlActivated">#ffffff</item>
        <!--输入框光标颜色-->
        <item name="colorControlHighlight">#ffffff</item>
    </style>

    <style name="TextInputThemeStyle" parent="AppTheme">
        <!--输入框提示字体色-->
        <!--        <item name="android:textColorHint">@color/white</item>-->
        <!--输入框下划线默认颜色-->
        <item name="colorControlNormal">@color/md_theme_red</item>
        <!--输入框下划线选中状态色-->
        <item name="colorControlActivated">@color/md_theme_red</item>
        <!--输入框光标颜色-->
        <item name="colorControlHighlight">@color/md_theme_red</item>
    </style>
</resources>