<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:clipChildren="false">

        <RelativeLayout
            android:id="@+id/slide_itemView"
            android:clipChildren="false"
            android:tag="slide_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/ll_item"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                        <TextView
                            android:id="@+id/userId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="序号"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textColor="#323030"
                            android:background="#DFDCDC"/>

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="用户名"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textColor="#323030"
                            android:background="#DFDCDC"/>

                        <TextView
                            android:id="@+id/LocalPermissions"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="本地操作权限"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="#323030"
                            android:background="#DFDCDC"/>

                        <TextView
                            android:id="@+id/RemotePermissions"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="远程操作权限"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="#323030"
                            android:background="#DFDCDC"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/slide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/ll_item"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_update"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:background="#FE3C31"
                            android:gravity="center"
                            android:text="修 改"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                </LinearLayout>

        </RelativeLayout>

</RelativeLayout>