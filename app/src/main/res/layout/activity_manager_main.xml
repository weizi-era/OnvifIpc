<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RealVideoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_group1"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <cn.nodemedia.NodePlayerView
                android:id="@+id/video_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/pb_progressbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_video_back1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_back" />

            <Button
                android:id="@+id/btn_play_video1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/icon_topause" />

            <Button
                android:id="@+id/btn_full_video1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_tofullscreen" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_group1"/>

        <RelativeLayout
            android:id="@+id/rl_group2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/line">

            <cn.nodemedia.NodePlayerView
                android:id="@+id/video_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ProgressBar
                android:id="@+id/pb_progressbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_video_back2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_back" />

            <Button
                android:id="@+id/btn_play_video2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/icon_topause" />

            <Button
                android:id="@+id/btn_full_video2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_tofullscreen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_group2"
            android:orientation="vertical"
            android:background="#C1BFBF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="设备状态数据"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="MN:"/>

                <TextView
                    android:id="@+id/tv_mnCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:text="20010101010101"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="经度:"/>

                <TextView
                    android:id="@+id/tv_longitude"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:text="106.527343"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="外部电压:"/>

                <TextView
                    android:id="@+id/tv_outSideVoltage"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:text="12.3V"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="纬度:"/>

                <TextView
                    android:id="@+id/tv_latitude"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:text="106.527343"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="电池电压:"/>

                <TextView
                    android:id="@+id/tv_BatteryVoltage"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:text="6.2V"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="速度:"/>

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:text="30 km/h"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="剩余电量:"/>

                <TextView
                    android:id="@+id/tv_lastElectricity"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:text="50 %"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/textview_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="通讯状态:"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/textview_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="COM1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/iv_com1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/blue_state" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/textview_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:text="COM2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                    <ImageView
                        android:id="@+id/iv_com2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/blue_state" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#8F8E8E"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_preview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_preview"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="预览"
                        android:textSize="25sp"
                        android:textColor="@color/black"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_replay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_replay"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="回放"
                        android:textSize="25sp"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/settings"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="设置"
                        android:textSize="25sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
